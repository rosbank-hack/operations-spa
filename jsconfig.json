{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src/",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "sourceMap": true,
        "jsx": "react",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules"
    ]
}
